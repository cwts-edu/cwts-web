---
import type { Language } from "@libs/language";
import site from "@libs/site";
import Base from "@layouts/Base.astro";
import News from "@components/home/News.astro";
import Degrees from "@components/home/Degrees.astro";
import StudyModes from "@components/home/StudyModes.astro";
import VisionAndMission from "@components/home/VisionAndMission.astro";
import WhyUs from "@components/home/WhyUs.astro";
import Faculty from "@components/home/Faculty.astro";

const language: Language = "zh";
---

<Base title={site.title(language)} language={language}>
  <VisionAndMission language={language} />
  <WhyUs language={language} />
  <News language={language} />
  <Degrees language={language} />
  <StudyModes />
  <Faculty language={language} />
</Base>
